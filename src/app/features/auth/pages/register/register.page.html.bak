<div class="min-h-screen flex items-center justify-center bg-luxury-dark font-sans relative overflow-hidden py-12 px-6">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <img src="/luxury_logistics_bg.png" alt="Logistics Background"
      class="w-full h-full object-cover opacity-20 group-hover:scale-105 transition-transform duration-1000">
    <div class="absolute inset-0 bg-gradient-to-b from-luxury-dark via-luxury-dark/90 to-luxury-dark"></div>
  </div>

  <!-- Animated Blobs -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div
      class="absolute top-[20%] -right-[10%] w-[40%] h-[40%] bg-luxury-accent/5 rounded-full blur-[120px] animate-pulse">
    </div>
    <div
      class="absolute bottom-[20%] -left-[10%] w-[40%] h-[40%] bg-indigo-500/5 rounded-full blur-[120px] animate-pulse"
      style="animation-delay: 1.5s;"></div>
  </div>

  <div class="max-w-2xl w-full relative z-10">
    <!-- Header -->
    <div class="text-center mb-8">
      <h2 class="text-4xl font-display font-extrabold text-luxury-text tracking-tight mb-3">Rejoindre SmartLogi</h2>
      <p class="text-luxury-text-muted font-medium">Créez votre compte en quelques instants</p>
    </div>

    <!-- Form Card -->
    <div
      class="bg-luxury-card/40 backdrop-blur-2xl p-8 sm:p-10 rounded-[2.5rem] border border-luxury-border shadow-2xl relative overflow-hidden group">
      <!-- Loading Overlay -->
      <div *ngIf="Loading"
        class="absolute inset-0 z-50 bg-luxury-dark/80 backdrop-blur-md flex items-center justify-center transition-all duration-500">
        <div class="flex flex-col items-center">
          <div class="w-12 h-12 border-2 border-luxury-accent border-t-transparent rounded-full animate-spin"></div>
          <p class="mt-4 text-luxury-accent font-semibold tracking-widest text-sm uppercase animate-pulse">Création du
            compte...</p>
        </div>
      </div>

      <form (ngSubmit)="register()" #RegisterForm="ngForm" class="space-y-8">
        <!-- Identity Section -->
        <div class="space-y-6">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div class="space-y-2">
              <label class="block text-xs font-bold text-luxury-text-muted uppercase tracking-widest ml-1"
                for="nom">Nom</label>
              <input type="text" id="nom" name="nom" [(ngModel)]="Nom" required placeholder="Ex: Dupont"
                class="block w-full px-5 py-4 bg-luxury-dark/50 border border-luxury-border text-luxury-text rounded-xl focus:ring-1 focus:ring-luxury-accent focus:border-luxury-accent transition-all outline-none placeholder:text-luxury-text-muted/30"
                #nomCtrl="ngModel" />
            </div>
            <div class="space-y-2">
              <label class="block text-xs font-bold text-luxury-text-muted uppercase tracking-widest ml-1"
                for="prenom">Prénom</label>
              <input type="text" id="prenom" name="prenom" [(ngModel)]="Prenom" required placeholder="Ex: Jean"
                class="block w-full px-5 py-4 bg-luxury-dark/50 border border-luxury-border text-luxury-text rounded-xl focus:ring-1 focus:ring-luxury-accent focus:border-luxury-accent transition-all outline-none placeholder:text-luxury-text-muted/30"
                #prenomCtrl="ngModel" />
            </div>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div class="space-y-2">
              <label class="block text-xs font-bold text-luxury-text-muted uppercase tracking-widest ml-1"
                for="email">Email Professionnel</label>
              <input type="email" id="email" name="email" [(ngModel)]="Email" required email
                placeholder="nom@entreprise.com"
                class="block w-full px-5 py-4 bg-luxury-dark/50 border border-luxury-border text-luxury-text rounded-xl focus:ring-1 focus:ring-luxury-accent focus:border-luxury-accent transition-all outline-none placeholder:text-luxury-text-muted/30"
                #emailCtrl="ngModel" />
            </div>
            <div class="space-y-2">
              <label class="block text-xs font-bold text-luxury-text-muted uppercase tracking-widest ml-1"
                for="telephone">Téléphone</label>
              <div class="relative">
                <span
                  class="absolute inset-y-0 left-0 pl-5 flex items-center text-luxury-accent text-xs font-bold">+212</span>
                <input type="number" id="telephone" name="telephone" [(ngModel)]="Telephone" required
                  placeholder="600-000000"
                  class="block w-full pl-16 pr-5 py-4 bg-luxury-dark/50 border border-luxury-border text-luxury-text rounded-xl focus:ring-1 focus:ring-luxury-accent focus:border-luxury-accent transition-all outline-none placeholder:text-luxury-text-muted/30"
                  #telephoneCtrl="ngModel" />
              </div>
            </div>
          </div>

          <div class="space-y-2">
            <label class="block text-xs font-bold text-luxury-text-muted uppercase tracking-widest ml-1"
              for="adress">Adresse de Livraison Pincipale</label>
            <input type="text" id="adress" name="adress" [(ngModel)]="Adress" required
              placeholder="N°, Boulevard, Ville, Pays"
              class="block w-full px-5 py-4 bg-luxury-dark/50 border border-luxury-border text-luxury-text rounded-xl focus:ring-1 focus:ring-luxury-accent focus:border-luxury-accent transition-all outline-none placeholder:text-luxury-text-muted/30"
              #adressCtrl="ngModel" />
          </div>

          <div class="space-y-2">
            <label class="block text-xs font-bold text-luxury-text-muted uppercase tracking-widest ml-1"
              for="password">Mot de passe</label>
            <input type="password" id="password" name="password" [(ngModel)]="Password" required
              placeholder="8 caractères minimum"
              class="block w-full px-5 py-4 bg-luxury-dark/50 border border-luxury-border text-luxury-text rounded-xl focus:ring-1 focus:ring-luxury-accent focus:border-luxury-accent transition-all outline-none placeholder:text-luxury-text-muted/30"
              #passwordCtrl="ngModel" />
          </div>
        </div>

        <div class="space-y-4 pt-4">
          <button type="submit"
            class="w-full flex justify-center items-center gap-3 py-4 px-4 bg-luxury-accent hover:bg-luxury-accent-hover text-luxury-dark text-sm font-bold uppercase tracking-widest rounded-xl transition-all shadow-lg hover:shadow-luxury-accent/20 disabled:opacity-50 disabled:cursor-not-allowed transform hover:-translate-y-0.5 active:translate-y-0"
            [disabled]="RegisterForm.invalid || Loading">
            <span>Créer un compte</span>
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </button>

          <p class="text-center text-sm text-luxury-text-muted">
            Déjà inscrit?
            <a routerLink="/auth/login"
              class="font-bold text-luxury-accent hover:underline underline-offset-4 ml-1">Connectez-vous</a>
          </p>
        </div>
      </form>
    </div>

    <!-- Minimalist Footer -->
    <div class="mt-8 text-center text-luxury-text-muted/40 text-xs font-medium uppercase tracking-[0.2em]">
      &copy; 2026 SmartLogi Enterprise &bull; System v2.0
    </div>
  </div>
</div>